<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
    <property name="triggers">
      <list>
        <ref local="trigger.processUploads" />
        <ref local="trigger.processStartEncodes" />
        <ref local="trigger.processOldEncodingJobs" />
        <ref local="trigger.processDeletions" />
      </list>
    </property>
  </bean>

  <!-- triggers -->
  <bean id="job.base" abstract="true" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    <property name="targetObject" ref="aws.controller" />
    <property name="concurrent" value="true" />
  </bean>

  <bean id="trigger.base" abstract="true" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
    <!-- 30 seconds after bundle starts -->
    <property name="startDelay" value="5000" />
    <property name="repeatInterval" value="300000" /><!-- Once every 5 minutes -->
  </bean>

  <bean id="trigger.processUploads" parent="trigger.base">
    <property name="jobDetail">
      <bean parent="job.base">
        <property name="name" value="processUploads" />
        <property name="targetMethod" value="processUploads" />
      </bean>
    </property>
  </bean>

  <bean id="trigger.processStartEncodes" parent="trigger.base">
    <property name="jobDetail">
      <bean parent="job.base">
        <property name="name" value="processStartEncodes" />
        <property name="targetMethod" value="processStartEncodes" />
      </bean>
    </property>
  </bean>

  <bean id="trigger.processOldEncodingJobs" parent="trigger.base">
    <property name="jobDetail">
      <bean parent="job.base">
        <property name="name" value="processOldEncodingJobs" />
        <property name="targetMethod" value="processOldEncodingJobs" />
      </bean>
    </property>
  </bean>

  <bean id="trigger.processDeletions" parent="trigger.base">
    <property name="jobDetail">
      <bean parent="job.base">
        <property name="name" value="processDeletions" />
        <property name="targetMethod" value="processDeletions" />
      </bean>
    </property>
  </bean>
</beans>
