<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

  <jaxrs:server address="${url.servicemix:}/ekko">
    <jaxrs:serviceBeans>
      <ref local="api.auth" />
      <ref local="api.courses" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="api.base" abstract="true" />

  <bean id="api.auth" parent="api.base" class="org.ccci.gto.servicemix.cas.jaxrs.api.AuthenticationApi">
    <property name="serviceUri" value="${ekko.base.uri}" />
  </bean>

  <bean id="api.courses" parent="api.base" class="org.ccci.gto.servicemix.ekko.jaxrs.api.CoursesApi">
    <property name="baseUri" value="${ekko.base.uri}" />
    <property name="support">
      <bean class="org.ccci.gto.servicemix.ekko.jaxrs.api.CoursesApiSupport" />
    </property>
  </bean>
</beans>
