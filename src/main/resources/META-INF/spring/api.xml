<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

  <jaxrs:server address="${url.servicemix:}/ekko">
    <jaxrs:serviceBeans>
      <ref local="api.auth" />
      <ref local="api.courses" />
      <ref local="api.course" />
      <ref local="api.resources" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="api.base" abstract="true" class="org.ccci.gto.servicemix.common.jaxrs.api.CasSessionAwareApi">
    <property name="authRealm" value="ekko" />
    <property name="baseUri" value="${ekko.base.uri}" />
    <property name="casBaseUri" value="${cas.url:https://thekey.me/cas/}" />
    <property name="sessionGrouping" value="${session.grouping:ekko}" />
  </bean>

  <bean id="api.auth" parent="api.base" class="org.ccci.gto.servicemix.common.jaxrs.api.AuthenticationApi" />

  <bean id="api.courses" parent="api.base" class="org.ccci.gto.servicemix.ekko.jaxrs.api.CoursesApi" />

  <bean id="api.course" parent="api.base" class="org.ccci.gto.servicemix.ekko.jaxrs.api.CourseApi">
    <property name="support">
      <bean class="org.ccci.gto.servicemix.ekko.jaxrs.api.CourseApiSupport" />
    </property>
  </bean>

  <bean id="api.resources" parent="api.base" class="org.ccci.gto.servicemix.ekko.jaxrs.api.ResourcesApi" />
</beans>
